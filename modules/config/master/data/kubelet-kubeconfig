apiVersion: v1
kind: Config
users:
- name: kubelet
  user:
    client-certificate: /etc/kubernetes/kubelet.crt
    client-key: /etc/kubernetes/kubelet.key
clusters:
- name: local
  cluster:
    certificate-authority: /etc/kubernetes/ca.crt
    server: https://${master_ip}
contexts:
- context:
    cluster: local
    user: kubelet
  name: service-account-context
current-context: service-account-context
